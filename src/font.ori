# Template for a single font
=page.ori({
  title: _/name
  @text: `
    <a href="..">Typo.town</a>
    <h1>{{ _/name }}</h1>
    <img src="../images/{{ _/id }}.png" alt="{{ _/name }}">
    <p>
      {{ _/@text }}
    </p>
    <ul>
    {{ @map(_/tags, =`
      <li>
        <a href="../tags/{{ _ }}.html">{{ _ }}</a>
      </li>
    `) }}
    </ul>
  `
})
