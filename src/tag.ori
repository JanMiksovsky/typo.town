// Template for a tag page, shows all the fonts using that tag.
(fontsWithTag) => page.ori({
  title: fontsWithTag/tag
  @text: `
    <a href="..">Typo.town</a>
    <h1>${ fontsWithTag/tag }</h1>
    ${ @map(fontsWithTag/fonts, (font) => `
    <a href="../fonts/${ font/id }.html">
      <img src="../images/${ font/id }.png" alt="${ font/name }" width="300" height="100">
    </a>
    `) }
  `
})
