# Template for a tag page, shows all the fonts using that tag.
=page.ori({
  title: _/tag
  @text: `
    <a href="..">Typo.town</a>
    <h1>{{ _/tag }}</h1>
    {{ @map(_/fonts, =`
    <a href="../fonts/{{ _/id }}.html">
      <img src="../images/{{ _/id }}.png" alt="{{ _/name }}" width="400" height="100">
    </a>
    `) }}
  `
})
