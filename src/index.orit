{{ page.orit(@document(
  `
    <h1>Typo.town</h1>

    <h2>Fonts</h2>
    {{ @tree/map(_/fontData, =`
    <a href="fonts/{{ _/id }}.html" style="text-decoration: none;">
      <img src="images/{{ _/id }}.png" alt="{{ _/name }}" width="400" height="100">
    </a>
    `) }}

    <h2>Tags</h2>
    <ul>
      {{ @tree/map(_/groupedByTag, =`
      <li>
        <a href="tags/{{ @key }}.html">{{ @key }}</a>
      </li>
      `) }}
    </ul>
  `
  { title: "Typo.town" }
)) }}
