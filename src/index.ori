<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="INDEX, FOLLOW" />

    <!-- Icons supplied or created using something like favicon.io -->
    <link rel="icon" type="image/png" href="assets/icon.png" />
    <!-- Insert new icon tags here -->

    <!-- Search & social optimisation create using something like megatags.co
    -->
    <title>Typo.town</title>
    <meta name="description" content="A test project, and not much else" />

    <style type="text/css">
      body {
        font-family: system-ui, sans-serif;
      }
    </style>
  </head>

  <body>
    <h1>Typo.town</h1>

{{ @map/values(fontData, =`
    <a href="fonts/{{ id }}.html">
      <img src="images/{{ id }}.png" alt="{{ name }}">
    </a>
`) }}

    <ul>
{{ @map/values(groupedByTag, =`
      <li>
        <a href="tags/{{ @key }}.html">{{ @key }}</a>
      </li>
`) }}
    </ul>

  </body>
</html>
