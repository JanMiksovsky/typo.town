# Home page template
=page.ori({
  title: "Typo.town"
  @text: `
    <h1>Typo.town</h1>

    <h2>Fonts</h2>
    {{ @map(_/fontData, =`
    <a href="fonts/{{ _/id }}.html" style="text-decoration: none;">
      <img src="images/{{ _/id }}.png" alt="{{ _/name }}" width="300" height="100">
    </a>
    `) }}

    <h2>Tags</h2>
    <ul>
      {{ @map(_/groupedByTag, =`
      <li>
        <a href="tags/{{ @key }}.html">{{ @key }}</a>
      </li>
      `) }}
    </ul>
  `
})
